//The programme in which employee information is assigned to the system using struct and enumeration

#include<stdio.h>
#include<stdlib.h>
#include<math.h>

enum Scope{
    HR,
    Search,
    Sales,
    Software,
};

struct businessDepartment{
    int annualSalary;
    unsigned socialSecuriyNumber;
    enum Scope scope;
};

int main(){

    struct businessDepartment employes;

    int number[3];
    srand(time(NULL));
    for(int i=1;i<=3;i++){
        number[i] = (rand() % (60000 - 40000)) + 40000;
    }

    for(int i=1;i<=3;i++){

        printf("Enter the employe scope (HR:0,Search:1,Sales:2,Software:3)\n");
        scanf("%d",&employes.scope);

        printf("Enter the employe security number\n");
        scanf("%d",&employes.socialSecuriyNumber);

        employes.annualSalary = number[i];
        printf("\n----------------------------\n");
        if(employes.scope==0)
            printf("Employe %d\nEmployes Scope: HR\nEmployes Social Security Number: %d\nEmployes Annual Salary: %d",i,employes.socialSecuriyNumber,employes.annualSalary);
        if(employes.scope==1)
            printf("Employe %d\nEmployes Scope: Search\nEmployes Social Security Number: %d\nEmployes Annual Salary: %d",i,employes.socialSecuriyNumber,employes.annualSalary);
        if(employes.scope==2)
            printf("Employe %d\nEmployes Scope: Sales\nEmployes Social Security Number: %d\nEmployes Annual Salary: %d",i,employes.socialSecuriyNumber,employes.annualSalary);
        if(employes.scope==3)
            printf("Employe %d\nEmployes Scope: Software\nEmployes Social Security Number: %d\nEmployes Annual Salary: %d",i,employes.socialSecuriyNumber,employes.annualSalary);
        printf("\n----------------------------\n");
    }

    return 0;
}
