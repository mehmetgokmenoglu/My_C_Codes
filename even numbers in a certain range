//even numbers in a certain range
#include <stdio.h>

int main() {

int startnumber,stopnumber,i,count=0;

printf("Enter the startnumber and stopnumber:\n");
scanf("%d %d",&startnumber,&stopnumber);

if(startnumber%2==0){
    i = startnumber;
}
else {
    i = startnumber + 1;
}
while(i<=stopnumber){
    if(i%2==0){
        printf("%d ",i);
        count = count+1;
        i += 2;
    }
}
printf("(Total %d even numbers)",count);
    return 0;
}
